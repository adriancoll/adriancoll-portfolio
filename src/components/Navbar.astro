<script defer is:inline>
  const $closeModal = document.getElementById('close-main-menu')
  const $openModal = document.getElementById('open-main-menu')
  const $modal = document.getElementById('main-menu-modal')

  const toggleModal = () => {
    const isOpen = !$modal.classList.contains('hidden')
    $modal.classList[isOpen ? 'add' : 'remove']('hidden')
  }

  $openModal.addEventListener('click', toggleModal)
  $closeModal.addEventListener('click', toggleModal)
</script>
